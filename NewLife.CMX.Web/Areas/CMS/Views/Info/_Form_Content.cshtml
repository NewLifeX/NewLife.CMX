@model NewLife.CMX.Info
@using NewLife.CMX
@{
    var inf = Model as Info;
}
<script src="~/Content/ueditor/ueditor.config.js"></script>
<script src="~/Content/ueditor/ueditor.all.min.js"></script>
<script src="~/Content/ueditor/lang/zh-cn/zh-cn.js"></script>
<script id="ContentText" name="ContentText" type="text/plain">
    @Html.Raw(inf.ContentText)
</script>
<script type="text/javascript">
    //实例化编辑器
    //建议使用工厂方法getEditor创建和引用编辑器实例，如果在某个闭包下引用该编辑器，直接调用UE.getEditor('editor')就能拿到相关的实例
    var _width = $(document.body).width() * 0.75;//浏览器当前窗口文档body的高度
    var ue = UE.getEditor('ContentText', {
        initialFrameWidth: _width,
    });
</script>
