@using NewLife.Common;
@{
    //var menu = ManageProvider.Menu.Current;
    var menu = ViewBag.Menu as IMenu;
    HttpContext.Current.Items["Title"] = ViewBag.Title + "";
}
<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>@ViewBag.Title - @SysConfig.Current.DisplayName</title>
    <meta name="description" content="新生命开发团队">
    <meta name="keywords" content="新生命开发团队">
    <meta name="author" content="新生命开发团队">
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />

    <!-- 基本样式 -->
    <link rel="stylesheet" href="~/Content/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/bootstrap/css/font-awesome.min.css" />

    <link rel="stylesheet" href="~/Content/bootstrap/css/bootstrap-theme.min.css" type="text/css" />
    <link rel="stylesheet" href="~/Content/bootstrap/css/bootstrap-responsive.min.css" type="text/css" />

    <!-- 页面内联样式 -->
    <link rel="stylesheet" href="~/Content/x.css" />
</head>
<body>
    @await Html.PartialAsync("_Header")
    <div class="content-wrapper main-content clear-fix">
        @RenderBody()
    </div>
    <footer class="footer">
        @await Html.PartialAsync("_Footer")
    </footer>
    <!-- JQuery作为一等公民，页面内部随时可能使用 -->
    <script src="~/Content/js/jquery-2.1.3.min.js"></script>
    <!-- 最早引入基本脚本 -->
    <script src="~/Content/bootstrap/js/bootstrap.min.js"></script>

    <!-- HTML5shiv and Respond.js for IE8 to support HTML5 elements and media queries -->
    <!--[if lte IE 8]>
    <script src="~/Content/js/html5shiv.min.js"></script>
    <script src="~/Content/js/respond.min.js"></script>
    <![endif]-->
    @RenderSection("scripts", required: false)
</body>
</html>